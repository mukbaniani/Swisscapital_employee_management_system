<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_sql_tree_view" model="ir.ui.view">
            <field name="name">employee SQL tree view</field>
            <field name="model">employee.view</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name" />
                    <field name="last_name" />
                    <field name="person_number" />
                    <field name="department_id" />
                </tree>
            </field>
        </record>

        <record id="employee_sql_tree_view_act_window" model="ir.actions.act_window">
            <field name="name">employee SQL tree view</field>
            <field name="res_model">employee.view</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>